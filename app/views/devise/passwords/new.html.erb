<div class="row" id="login-form">
	<div class="container">
		<div class = "col-md-6 col-md-offset-3">
			<h2>Forgot your password?</h2>

			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			<%= devise_error_messages! %>

			<div class="give-margin form-group">
				<%= f.label :email %><br />
				<%= f.email_field :email, :autofocus => true, :class => "form-control normal-text-field" %>
			</div>

			<div><%= f.submit "Send me reset password instructions", :class =>"btn bnt-lg btn-primary", :style => "height:50px; width:255px;" %></div>
			<% end %>
			<div class="give-margin">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>
