<div class="row" id="login-form">
	<div class="container">
		<div class = "col-md-6 col-md-offset-3">
		<h1>Sign in</h1>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				<div class="give-margin form-group">
					<%= f.label :email %>
					<%= f.email_field :email, :autofocus => true, :class => "form-control normal-text-field" %>
				</div>
				<div class="give-margin">
					<%= f.label :password %>
					<%= f.password_field :password, :class=>"form-control normal-text-field" %>
				</div>
				<% if devise_mapping.rememberable? -%>
					<div class="form-group">
						<%= f.check_box :remember_me %> <%= f.label :remember_me %>
				<% end -%>

					</div>
					<p>
						<%= f.submit "Sign in", :class =>"btn bnt-lg btn-primary", :style => "height:50px; width:155px;" %>
					</p>
					<div class="give-margin">
						<%= render "devise/shared/links" %>
					</div>
	<% end %>
			</div>
	</div>
</div>


